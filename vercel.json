{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "static/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "templates/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "TZ": "Europe/Lisbon"
  },
  "regions": ["fra1"],
  "installCommand": "pip install -r requirements.txt",
  "buildCommand": "echo 'ðŸš€ A iniciar build da RÃ¡dio Pulse...' && pip install -r requirements.txt",
  "outputDirectory": ".",
  "public": true
}
